<% obj.each do |artplan| %>
    <div class="row">

      <div class="col-md-2">
        <section class ="center">
        </section>
      </div>  

      <div class="col-md-8 well">

        <h4><%= link_to "My Art Plan", art_plan_path(artplan) %></h4>
        <ul>
          <li><%= pluralize(artplan.art_projects.count, "art projects") if artplan.art_projects %></li>
          <li><%= artplan.goal %> (goal)</li>
           <li><%= artplan.description %> (description)</li>
         </ul>
         </p>
           <span class="quiet"></span><small>Created by <%= artplan.user.try(:name) %></small></span><br>
           <span class="quiet"></span><small>Created <%= time_ago_in_words(artplan.created_at) %> ago</small></span>
         </p>
         <% if logged_in? && current_user == artplan.user %>
          <div class="artplan-actions">
           <%= link_to "Add Art Projects", new_art_plan_art_schedule_path(artplan), class:"btn btn-xs btn-xlarge" %>
           <%= link_to "View Art Projects", art_plan_art_schedules_path(artplan), class:"btn btn-xs btn-primary" %>
           <%= link_to "Edit Art Plan", edit_art_plan_path(artplan), class:"btn btn-xs btn-warning" %>
           <%= link_to "Delete Art Plan", art_plan_path(artplan), method: :delete, data: { confirm: "Are you sure you want to delete this art plan and associated art projects?"}, class:"btn btn-xs btn-danger" %>
           </div>
         <% end %>
      </div>
    </div>
  <% end %>